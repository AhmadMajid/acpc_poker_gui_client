#rejoin_match_form
  = form_tag rejoin_match_url, remote: true, class: 'form-horizontal' do
    .control-group
      .control-labels
        %label.control-label.required= label_for_required 'Match name'
      .controls
        = text_field_tag 'match_name', '', required: true
    .control-group.select
      .control-labels
        %label.control-label.required= label_for_required 'Seat'
      .controls
        = select_tag :seat, options_for_select([1, 2, 3]), include_blank: false, required: true
    .form-actions
      - rejoin_match_label = 'Rejoin match'
      = submit_tag rejoin_match_label, class: 'btn btn-primary', data: { disable_with: rejoin_match_label }, id: 'rejoin_match'